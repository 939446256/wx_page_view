/* components/pageView/pageView.wxss */
.flex-col {
  display: flex;
  flex-direction: column;
}

.more-view {
  padding: 20rpx 0;
  margin: 0 auto;
  text-align: center;
  font-size: 28rpx;
  color: #909399 ;
  scroll-snap-align: none;
  justify-content: center;
  align-items: center;
  display: flex;
}

.load-more {
  height: 30rpx;
  width: 30rpx;
  animation: loading 1s steps(10) infinite;
  margin-right: 8rpx;
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}